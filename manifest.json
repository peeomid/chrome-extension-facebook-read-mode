{
  "name"                 : "Read Mode for Facebook post" ,
  "description"          : "Read Mode for Facebook post." ,
  "version"              : "1.0" ,
  "manifest_version"     : 2 , 
  "author"               : "@peeomid" ,

  "permissions": 
       [
            "https://www.facebook.com/*"
       ],

  "icons": 
       {
         "16"            : "/assets/icons/16.png" ,
         "48"            : "/assets/icons/48.png" ,
         "128"           : "/assets/icons/128.png"
       },

"content_scripts": 
     [
         {
           "matches": 
                [
                         "https://www.facebook.com/*"            
                ],
           "run_at"      : "document_end",
           "js": 
                [
                         "/js/main.js"
                ]
         }
     ],

  "browser_action": 
       {
         "default_icon": 
              {
                "128"    : "/assets/icons/48.png"
              }
       },

 "background": 
      {
         "scripts": 
         [ 
                         "/js/background.js"
         ],
         "persistent"    : false
      }
}